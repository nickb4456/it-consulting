---
import Header from '../components/Header.astro';  // Keep if you want nav, or remove for pure minimal
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>IT Consulting – Reliable Solutions</title>
    <!-- Add basic font if needed; Tailwind usually handles -->
  </head>
  <body class="bg-white text-gray-900 font-sans antialiased">
    <!-- Optional minimal header – edit Header.astro to remove social links if present -->
    <Header />

    <main class="max-w-5xl mx-auto px-6 py-20 md:py-32">
      <!-- Hero – Big, centered, authoritative like realfood.gov -->
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-tight mb-8 leading-tight">
          Empowering Businesses with Reliable IT Solutions
        </h1>

        <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto mb-12 leading-relaxed">
          We deliver secure, scalable technology strategies that reduce downtime, cut costs, and drive growth.<br class="hidden md:block" />
          Let's transform your IT from a headache into a competitive advantage.
        </p>

        <!-- Single prominent CTA – blue, simple, like gov buttons -->
        <div class="flex flex-col sm:flex-row justify-center gap-6">
          <a
            href="mailto:your.email@domain.com?subject=Free%20IT%20Assessment%20Request"
            class="inline-block px-10 py-5 bg-blue-700 text-white font-bold text-lg rounded-md hover:bg-blue-800 transition-colors shadow-sm"
          >
            Schedule Your Free IT Assessment
          </a>

          <a
            href="/about"  <!-- or remove if no about page yet -->
            class="inline-block px-10 py-5 text-blue-700 font-bold text-lg hover:underline"
          >
            Learn More
          </a>
        </div>
      </div>

      <!-- Stats section – subtle grid, like realfood.gov's fact blocks -->
      <div class="mt-24 grid md:grid-cols-3 gap-12 text-center">
        <div>
          <p class="text-5xl font-bold text-blue-700">99.9%</p>
          <p class="mt-3 text-gray-600 text-lg">Uptime Reliability</p>
        </div>
        <div>
          <p class="text-5xl font-bold text-blue-700">30%+</p>
          <p class="mt-3 text-gray-600 text-lg">Average Cost Savings</p>
        </div>
        <div>
          <p class="text-5xl font-bold text-blue-700">24/7</p>
          <p class="mt-3 text-gray-600 text-lg">Proactive Support</p>
        </div>
      </div>
    </main>

    <!-- Clean footer – strip social cruft -->
    <Footer />  <!-- Edit Footer.astro to just © 2026 Your Name. All rights reserved. -->
  </body>
</html>
