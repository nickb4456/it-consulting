---
import HeaderLink from './HeaderLink.astro';  // Keep this if you have it; otherwise replace with plain <a>
const SITE_TITLE = 'Nick B. IT Consulting';  // Change this to your actual site/company name
---

<header class="bg-white border-b border-gray-200 shadow-sm">
  <nav class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">
    <!-- Site Title / Logo – Left side, bold & large -->
    <h1 class="m-0">
      <a 
        href="/" 
        class="text-2xl md:text-3xl font-extrabold text-gray-900 tracking-tight hover:text-blue-700 transition-colors"
      >
        {SITE_TITLE}
      </a>
    </h1>

    <!-- Navigation Links – Right side, clean horizontal -->
    <div class="flex items-center gap-10 md:gap-12">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <!-- Add more if needed, e.g. <HeaderLink href="/services">Services</HeaderLink> -->
    </div>
  </nav>
</header>

<style>
  /* Optional: Enhance .gov-like feel with better hover/active states */
  a {
    color: #1f2937; /* gray-900 */
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  a:hover,
  a:focus {
    color: #1d4ed8; /* blue-700 */
  }
  /* If HeaderLink.astro doesn't have active class, add this */
  a[aria-current="page"] {
    color: #1d4ed8;
    border-bottom: 3px solid #1d4ed8;
    padding-bottom: 2px;
  }
</style>
